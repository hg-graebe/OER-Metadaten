A" value="is(equal(ratsimp($(1)),ratsimp(2*x/(1-x^4))));"><variable identifier="RESPONSE_1408714074166" /><correct identifier="RESPONSE_1408714074166" /></customOperator><setOutcomeValue identifier="SCORE"><sum><variable identifier="SCORE" /><baseValue baseType="float">1</baseValue></sum></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><not><isNull><variable identifier="RESPONSE_1408714074166" /></isNull></not><setOutcomeValue identifier="FEEDBACKBASIC"><baseValue baseType="identifier">incorrect</baseValue></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><not><match><variable identifier="FEEDBACKBASIC" /><baseValue baseType="identifier">empty</baseValue></match></not><equal toleranceMode="exact"><variable identifier="SCORE" /><variable identifier="MAXSCORE" /></equal></and><setOutcomeValue identifier="FEEDBACKBASIC"><baseValue baseType="identifier">correct</baseValue></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><match><baseValue baseType="identifier">correct</baseValue><variable identifier="FEEDBACKBASIC" /></match></and><setOutcomeValue identifier="FEEDBACKMODAL"><multiple><variable identifier="FEEDBACKMODAL" /><baseValue baseType="identifier">Feedback179731701</baseValue></multiple></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><match><baseValue baseType="identifier">incorrect</baseValue><variable identifier="FEEDBACKBASIC" /></match></and><setOutcomeValue identifier="FEEDBACKMODAL"><multiple><variable identifier="FEEDBACKMODAL" /><baseValue baseType="identifier">Feedback17874843</baseValue></multiple></setOutcomeValue></responseIf></responseCondition></responseProcessing><modalFeedback  identifier="Feedback179731701" outcomeIdentifier="FEEDBACKMODAL" showHide="show" title="Richtig!" /><modalFeedback  identifier="Feedback17874843" outcomeIdentifier="FEEDBACKMODAL" showHide="show" title="Lösung:"><p>$$\qquad\qquad\qquad f'(x) = \bigg(\ln{\sqrt{\frac{1+x^2}{1-x^2}}}\bigg)' = \frac{1}{\displaystyle\sqrt{\frac{1+x^2}{1-x^2}}} \cdot \frac{1}{2\displaystyle\sqrt{\frac{1+x^2}{1-x^2}}} \cdot \frac{2x \cdot (1-x^2)-(1+x^2) \cdot (-2x)}{(1-x^2)^2} = \frac{2x \cdot (1-x^2)+(1+x^2) \cdot 2x}{2 \cdot \displaystyle\frac{1+x^2}{1-x^2} \cdot (1-x^2)^2} = \frac{x \cdot (1-x^2+1+x^2)}{(1-x^2)(1+x^2)} = \frac{2x}{1-x^4}$$</p></modalFeedback></assessmentItem>
