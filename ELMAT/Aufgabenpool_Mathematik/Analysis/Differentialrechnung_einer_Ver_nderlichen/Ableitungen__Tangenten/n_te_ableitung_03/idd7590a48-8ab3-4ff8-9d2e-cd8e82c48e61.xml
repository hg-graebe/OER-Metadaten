ition="MAXIMA" value="is(equal(ev($(1)),ev(2^n*e^(2*x)))) or is(equal(ev($(1)),ev(2^n*%e^(2*x))));"><variable identifier="RESPONSE_1410425491121" /><correct identifier="RESPONSE_1410425491121" /></customOperator><setOutcomeValue identifier="SCORE"><sum><variable identifier="SCORE" /><baseValue baseType="float">1</baseValue></sum></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><not><isNull><variable identifier="RESPONSE_1410425491121" /></isNull></not><setOutcomeValue identifier="FEEDBACKBASIC"><baseValue baseType="identifier">incorrect</baseValue></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><not><match><variable identifier="FEEDBACKBASIC" /><baseValue baseType="identifier">empty</baseValue></match></not><equal toleranceMode="exact"><variable identifier="SCORE" /><variable identifier="MAXSCORE" /></equal></and><setOutcomeValue identifier="FEEDBACKBASIC"><baseValue baseType="identifier">correct</baseValue></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><match><baseValue baseType="identifier">correct</baseValue><variable identifier="FEEDBACKBASIC" /></match></and><setOutcomeValue identifier="FEEDBACKMODAL"><multiple><variable identifier="FEEDBACKMODAL" /><baseValue baseType="identifier">Feedback410495774</baseValue></multiple></setOutcomeValue></responseIf></responseCondition><responseCondition><responseIf><and><match><baseValue baseType="identifier">incorrect</baseValue><variable identifier="FEEDBACKBASIC" /></match></and><setOutcomeValue identifier="FEEDBACKMODAL"><multiple><variable identifier="FEEDBACKMODAL" /><baseValue baseType="identifier">Feedback1484999454</baseValue></multiple></setOutcomeValue></responseIf></responseCondition></responseProcessing><modalFeedback  identifier="Feedback410495774" outcomeIdentifier="FEEDBACKMODAL" showHide="show" title="Richtig!" /><modalFeedback  identifier="Feedback1484999454" outcomeIdentifier="FEEDBACKMODAL" showHide="show" title="Leider falsch!"><p>Es gilt: \(\quad f(x) = f^{(0)}(x) = \mathrm e^{2x}\), \(\quad f'(x) = 2\mathrm e^{2x}\), \(\quad f''(x) = 4\mathrm e^{2x}\), \(\quad f'''(x) = 8\mathrm e^{2x},\quad \dots, \quad f^{(n)}(x) = 2^n \cdot \mathrm e^{2x}\).</p></modalFeedback></assessmentItem>
